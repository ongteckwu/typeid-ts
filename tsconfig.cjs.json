{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": ".",
        "outDir": "build/cjs",
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": false,
        "strict": true
    },
    "include": [
        "src/**/*",
        "bin/**/*",
        "test_builds/esm/*.ts",
        "test_builds/cjs/*.ts"
    ],
    "exclude": [
        "./node_modules/",
        "./build/"
    ],
}