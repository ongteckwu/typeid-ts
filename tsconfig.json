{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "node16",
    "rootDir": ".",
    "outDir": "build/esm",
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "strict": true
  },
  "include": [
    "src/**/*",
    "bin/**/*",
    "test/**/*",
    "test_builds/esm/*.ts",
    "test_builds/cjs/*.ts",
  ],
  "exclude": [
    "./node_modules/",
    "./build/"
  ],
}